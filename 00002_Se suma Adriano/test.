
test "Frescura para programar inicial de Adriano" {
	assert.that(adriano.frescoParaProgramar())
}

test "El nivel de contractura inicial de Adriano es 5" {
	assert.equals(5, adriano.nivelDeContractura())
}


test "Adriano tiene un día de trabajo y cambia su estado para programar" {
	adriano.trabajarUnDia()
	assert.notThat(adriano.frescoParaProgramar())
}

test "Adriano tiene un día de trabajo y se contractura" {
	adriano.trabajarUnDia()
	assert.equals(7, adriano.nivelDeContractura())
}

test "Adriano trabaja dos días seguidos y se contractura mucho" {
	adriano.trabajarUnDia()
	adriano.trabajarUnDia()
	assert.equals(11, adriano.nivelDeContractura())
}


test "Luego de que el spa atienda a Adriano, su nivel de contractura baja" {
	spa.atender(adriano)
	assert.equals(3, adriano.nivelDeContractura())
}

test "Luego de que el spa atienda a Adriano 3 veces, su nivel de contractura queda en 0" {
	3.times {n => spa.atender(adriano)}
	assert.equals(0, adriano.nivelDeContractura())
}

test "Luego de que el spa atienda a Adriano, está fresco para programar" {
	spa.atender(adriano)
	assert.that(adriano.frescoParaProgramar())
}

test "Olivia inicialmente tiene 4 de grado de concentracion" {
	assert.equals(4, olivia.gradoDeConcentracion())
}

test "Olivia recibe masajes pocas veces y su grado de concentracion aumenta un poco" {
	olivia.recibirMasajes()
	assert.equals(olivia.gradoDeConcentracion(), 6)	
}

test "Olivia recibe masajes muchas veces y su grado de concentracion aumenta bastante más al estar relajada" {
	4.times {n=> olivia.recibirMasajes()}
	assert.equals(olivia.gradoDeConcentracion(), 18)	
}

test "Inicialmente Olivia no es feliz" {
	assert.notThat(olivia.esFeliz())
}

test "Luego de 2 masajes Olivia es feliz" {
	2.times {n=> olivia.recibirMasajes()}
	assert.that(olivia.esFeliz())
}

test "Si Olivia discute con concentración baja, su concentración se mantiene igual" {
	olivia.discutir()
	assert.equals(olivia.gradoDeConcentracion(), 4)
}

test "Si Olivia se da un masaje y luego discute, su concentración queda en 5" {
	olivia.recibirMasajes()
	olivia.discutir()
	assert.equals(olivia.gradoDeConcentracion(), 5)
}

test "Si Olivia se da un baño de vapor, aumenta su concentración" {
	olivia.darseUnBanioDeVapor()
	assert.equals(olivia.gradoDeConcentracion(), 5)
}

test "Luego de que el spa atienda a Olivia, ella está feliz"{
	spa.atender(olivia)
	assert.that(olivia.esFeliz())
}

test "Si Olivia se atiende varias veces en el spa, su concentración aumenta mucho" {
  3.times {n => spa.atender(olivia) }
	assert.equals(olivia.gradoDeConcentracion(), 16)
}